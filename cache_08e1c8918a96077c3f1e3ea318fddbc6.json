b'<!DOCTYPE html>\n<html class="client-nojs" lang="en" dir="ltr">\n<head>\n<meta charset="UTF-8"/>\n<title>Al-Masudi - Wikipedia</title>\n<script>document.documentElement.className = document.documentElement.className.replace( /(^|\\s)client-nojs(\\s|$)/, "$1client-js$2" );</script>\n<script>(window.RLQ=window.RLQ||[]).push(function(){mw.config.set({"wgCanonicalNamespace":"","wgCanonicalSpecialPageName":false,"wgNamespaceNumber":0,"wgPageName":"Al-Masudi","wgTitle":"Al-Masudi","wgCurRevisionId":787881281,"wgRevisionId":787881281,"wgArticleId":10219069,"wgIsArticle":true,"wgIsRedirect":false,"wgAction":"view","wgUserName":null,"wgUserGroups":["*"],"wgCategories":["CS1 Armenian-language sources (hy)","Articles with Armenian-language external links","Pages using infobox Muslim leader with unknown parameters","Articles containing Arabic-language text","All articles with unsourced statements","Articles with unsourced statements from August 2009","Wikipedia articles with VIAF identifiers","Wikipedia articles with LCCN identifiers","Wikipedia articles with ISNI identifiers","Wikipedia articles with GND identifiers","Wikipedia articles with BNF identifiers","896 births","956 deaths","Iraqi historians","Medieval Arab geographers","Medieval Iraqi geographers","Geographers of medieval Islam","Khazar studies","10th-century writers","10th-century historians","Writers from Baghdad","Iraqi school","10th-century geographers","10th-century Iraqi people","10th-century Arab people"],"wgBreakFrames":false,"wgPageContentLanguage":"en","wgPageContentModel":"wikitext","wgSeparatorTransformTable":["",""],"wgDigitTransformTable":["",""],"wgDefaultDateFormat":"dmy","wgMonthNames":["","January","February","March","April","May","June","July","August","September","October","November","December"],"wgMonthNamesShort":["","Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"],"wgRelevantPageName":"Al-Masudi","wgRelevantArticleId":10219069,"wgRequestId":"WaAmtQpAME0AAJyBnm4AAABO",